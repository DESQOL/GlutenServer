{
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc -p .",
    "postbuild": "copyfiles src/ormconfig.js dist",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "lint": "eslint ./**/*.ts",
    "lint:fix": "eslint ./**/*.ts --fix",
    "start": "ts-node -r tsconfig-paths/register dist/src/server.js",
    "test": "cross-env NODE_ENV=test mocha -r ts-node/register -r tsconfig-paths/register test/*.ts --exit --timeout 10000"
  },
  "dependencies": {
    "app-root-path": "3.0.0",
    "bcrypt": "3.0.7",
    "class-validator": "0.11.0",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-openapi-validator": "3.1.2",
    "mysql": "2.17.1",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.13",
    "ts-node": "8.5.4",
    "typeorm": "0.2.21",
    "typescript": "3.7.3"
  },
  "devDependencies": {
    "@types/app-root-path": "1.2.4",
    "@types/bcrypt": "3.0.0",
    "@types/chai": "4.2.7",
    "@types/express": "4.17.2",
    "@types/mocha": "5.2.7",
    "@types/node": "12.12.17",
    "@types/supertest": "2.0.8",
    "@typescript-eslint/eslint-plugin": "2.11.0",
    "@typescript-eslint/parser": "2.11.0",
    "chai": "4.2.0",
    "copyfiles": "2.1.1",
    "cross-env": "6.0.3",
    "eslint": "6.7.2",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "mocha": "6.2.2",
    "nodemon": "2.0.2",
    "supertest": "4.0.2",
    "tsconfig-paths": "3.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "spec",
      "src"
    ],
    "ext": "ts yaml",
    "ignore": [
      "test/*"
    ],
    "delay": "2500",
    "execMap": {
      "ts": "ts-node"
    }
  }
}
