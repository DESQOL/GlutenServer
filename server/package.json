{
  "main": "dist/src/server.js",
  "scripts": {
    "build": "tsc -p .",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "postbuild": "copyfiles src/ormconfig.js dist",
    "dev": "nodemon -r tsconfig-paths/register src/server.ts",
    "lint": "eslint ./src/**/*.ts  ./src/**/*.js ./test/**/*.ts",
    "lint:fix": "eslint ./src/**/*.ts  ./src/**/*.js ./test/**/*.ts --fix",
    "start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register dist/src/server.js",
    "test": "cross-env NODE_ENV=test nyc mocha"
  },
  "dependencies": {
    "app-root-path": "3.0.0",
    "bcrypt": "3.0.7",
    "class-validator": "0.11.0",
    "compression": "1.7.4",
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "express-openapi-validator": "3.2.3",
    "express-rate-limit": "5.0.0",
    "helmet": "3.21.2",
    "js-yaml": "3.13.1",
    "morgan": "1.9.1",
    "mysql": "2.17.1",
    "rate-limit-redis": "1.7.0",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.13",
    "swagger-ui-express": "4.1.2",
    "ts-node": "8.5.4",
    "typeorm": "0.2.21",
    "typescript": "3.7.3",
    "winston": "3.2.1"
  },
  "devDependencies": {
    "@types/app-root-path": "1.2.4",
    "@types/bcrypt": "3.0.0",
    "@types/chai": "4.2.7",
    "@types/compression": "1.0.1",
    "@types/express": "4.17.2",
    "@types/express-rate-limit": "3.3.3",
    "@types/helmet": "0.0.45",
    "@types/js-yaml": "3.12.1",
    "@types/mocha": "5.2.7",
    "@types/morgan": "1.7.37",
    "@types/node": "12.12.21",
    "@types/rate-limit-redis": "1.6.0",
    "@types/supertest": "2.0.8",
    "@types/swagger-ui-express": "4.1.0",
    "@types/winston": "2.4.4",
    "@typescript-eslint/eslint-plugin": "2.12.0",
    "@typescript-eslint/parser": "2.12.0",
    "chai": "4.2.0",
    "copyfiles": "2.1.1",
    "coveralls": "3.0.9",
    "cross-env": "6.0.3",
    "eslint": "6.7.2",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-chai-friendly": "0.5.0",
    "eslint-plugin-import": "2.19.1",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "mocha": "6.2.2",
    "nodemon": "2.0.2",
    "nyc": "14.1.1",
    "source-map-support": "0.5.16",
    "supertest": "4.0.2",
    "tsconfig-paths": "3.9.0"
  },
  "nyc": {
    "include": [
      "src/**/*.js",
      "src/**/*.ts"
    ],
    "extension": [
      ".js",
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "sourceMap": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "nodemonConfig": {
    "watch": [
      "spec",
      "src"
    ],
    "ext": "ts yaml",
    "ignore": [
      "test/*"
    ],
    "execMap": {
      "ts": "ts-node"
    }
  }
}
