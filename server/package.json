{
   "name": "GlutenServer",
   "version": "0.0.1",
   "description": "",
   "scripts": {
      "dev": "nodemon",
      "docker:build": "docker-compose build database server",
      "docker:dump": "docker exec glutenserver_database_1 mysqldump -uroot -proot gluten > ../database/data.sql && head -n -1 ../database/data.sql > ../database/data.sql.tmp && mv ../database/data.sql.tmp ../database/data.sql",
      "docker:rebuild": "docker-compose build --no-cache database server",
      "docker:stop": "npm run docker:dump && docker-compose down",
      "lint": "eslint --ext .ts src test",
      "lint:fix": "eslint --ext .ts src test --fix",
      "mig:gen": "ts-node ./node_modules/typeorm/cli.js migration:generate -n PostRefactoring",
      "mig:run": "ts-node ./node_modules/typeorm/cli.js migration:run",
      "start": "ts-node src/index.ts",
      "test": "cross-env NODE_ENV=test mocha -r ts-node/register test/*.ts --exit --timeout 10000"
   },
   "dependencies": {
      "app-root-path": "3.0.0",
      "body-parser": "1.19.0",
      "express": "4.17.1",
      "express-openapi-validator": "2.17.2",
      "js-yaml": "3.13.1",
      "morgan": "1.9.1",
      "mysql": "2.17.1",
      "reflect-metadata": "0.1.13",
      "swagger-jsdoc": "3.4.0",
      "swagger-ui-express": "4.1.2",
      "typeorm": "0.2.20",
      "winston": "3.2.1",
      "yamljs": "0.3.0"
   },
   "devDependencies": {
      "@types/app-root-path": "1.2.4",
      "@types/chai": "4.2.5",
      "@types/express": "4.17.2",
      "@types/js-yaml": "3.12.1",
      "@types/mocha": "5.2.7",
      "@types/morgan": "1.7.37",
      "@types/node": "12.12.14",
      "@types/supertest": "2.0.8",
      "@types/swagger-ui-express": "4.1.0",
      "@types/yamljs": "0.2.30",
      "@typescript-eslint/eslint-plugin": "2.9.0",
      "@typescript-eslint/parser": "2.9.0",
      "chai": "4.2.0",
      "cross-env": "6.0.3",
      "eslint": "6.7.1",
      "express-openapi-validate": "0.4.4",
      "mocha": "6.2.2",
      "nodemon": "2.0.1",
      "supertest": "4.0.2",
      "ts-node": "8.5.3",
      "typescript": "3.7.2"
   },
   "nodemonConfig": {
      "exec": "docker-compose up --detach --build --force-recreate server",
      "watch": ".",
      "ext": "ts yaml"
   }
}
